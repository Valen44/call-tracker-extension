{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "CALL TRACKER",
  "action": {
    "default_popup": "./src/popup/popup.html",
    "default_icon": {
      "16": "./icons/dark-icon16.png",
      "32": "./icons/dark-icon32.png",
      "48": "./icons/dark-icon24.png",
      "128": "./icons/dark-icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://agent.lsaweb.com/agent",
        "https://valen44.github.io/*"
      ],
      "js": [
        "./assets/content.js",
        "./assets/themeDetector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "./assets/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "./dashboard/dashboard.html",
        "./dashboard/dashboard.js",
        "./dashboard/dashboard.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "icons": {
      "16": "./icons/dark-icon16.png",
      "32": "./icons/dark-icon32.png",
      "48": "./icons/dark-icon24.png",
      "128": "./icons/dark-icon128.png"
    }
}